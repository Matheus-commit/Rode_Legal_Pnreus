<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imgTracks"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:src="@drawable/tiretracks"></ImageView>

    <ImageView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:layout_below="@+id/imgTracks"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo"></ImageView>

    <TextView
        android:id="@+id/login"
        android:textColor="@color/green"
        android:layout_marginTop="20dp"
        android:text="Realize o seu login"
        android:textSize="30dp"
        android:layout_below="@+id/title"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <EditText
        android:id="@+id/username"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:hint="usuÃ¡rio"
        android:textAlignment="center"
        android:textColorHint="@color/grey"
        android:textSize="25dp"></EditText>

    <EditText
        android:id="@+id/pass"
        android:layout_marginTop="30dp"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:hint="senha"
        android:textColorHint="@color/grey"
        android:gravity="center"
        android:textAlignment="center"
        android:background="@drawable/border">
    </EditText>

    <Button
        android:id="@+id/buttonlogin"
        android:layout_marginTop="80dp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Login"
        android:layout_below="@id/pass"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@drawable/btncustom"
        android:textSize="20dp">
    </Button>

    <LinearLayout
        android:id="@+id/linearlayout01"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonlogin"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Criar Conta"
            android:layout_margin="15dp"
            android:textSize="18dp"
            android:textColor="@color/green"
            android:background="@color/transparent">
        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_margin="15dp"
            android:textSize="18dp"
            android:text="Esqueceu a senha?"
            android:textColor="@color/green"
            android:background="@color/transparent">
        </Button>
    </LinearLayout>


    <ImageView
        android:id="@+id/imgTracksbtn"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/tiretracks"></ImageView>


</RelativeLayout>