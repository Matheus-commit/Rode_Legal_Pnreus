<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imgTracks"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:src="@drawable/tiretracks"></ImageView>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgTracks"
        android:layout_marginTop="60dp"
        android:text="Cadastro de usuário"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="35dp"></TextView>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:src="@drawable/userplusicon"></ImageView>

    <TextView
        android:id="@+id/login"
        android:textColor="@color/green"
        android:layout_marginTop="2dp"
        android:text="Registre os dados:"
        android:textSize="30dp"
        android:layout_below="@+id/icon"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <EditText
        android:id="@+id/email"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/borderregister"
        android:gravity="center"
        android:hint="digite o email"
        android:textAlignment="center"
        android:textColorHint="@color/grey"
        android:textSize="20dp"></EditText>

    <EditText
        android:id="@+id/username"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/borderregister"
        android:gravity="center"
        android:hint="digite o usuário"
        android:textAlignment="center"
        android:textColorHint="@color/grey"
        android:textSize="20dp"></EditText>


    <EditText
        android:id="@+id/pass"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/borderregister"
        android:gravity="center"
        android:hint="digite a senha"
        android:textAlignment="center"
        android:textColorHint="@color/grey"
        android:textSize="20dp"></EditText>
    <EditText
        android:id="@+id/passconfirm"

        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/pass"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:hint="confirme a senha"
        android:textColorHint="@color/grey"
        android:gravity="center"
        android:textAlignment="center"
        android:background="@drawable/borderregister">
    </EditText>

    <Button
        android:id="@+id/buttonregister"
        android:layout_marginTop="40dp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Login"
        android:layout_below="@id/passconfirm"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@drawable/btncustom"
        android:textSize="20dp">
    </Button>


    <ImageView
        android:id="@+id/imgTracksbtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/tiretracks"></ImageView>


</RelativeLayout>