<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imgTracks"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:src="@drawable/tiretracks"></ImageView>

    <TextView
        android:id="@+id/title"
        android:textColor="@color/white"
        android:layout_below="@id/imgTracks"
        android:layout_marginTop="40dp"
        android:text="Esqueceu a senha?"
        android:textSize="35dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="200dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_height="200dp"
        android:layout_below="@id/title"
        android:src="@drawable/duvida">

    </ImageView>

    <TextView
        android:id="@+id/login"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Digite o email registrado no cadastro:"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="25dp"></TextView>

    <EditText
        android:id="@+id/email"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:hint="digite o email"
        android:textAlignment="center"
        android:textColorHint="@color/grey"
        android:textSize="25dp"></EditText>


    <TextView
        android:id="@+id/emailmsg"
        android:textColor="@color/white"
        android:layout_below="@id/icon"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:text="Enviamos um email para alterar a sua senha!"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_width="360dp"
        android:layout_height="wrap_content">
    </TextView>

    <Button
        android:id="@+id/buttonregister"
        android:layout_marginTop="60dp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="enviar"
        android:textAllCaps="false"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@drawable/btncustom"
        android:textSize="30dp">
    </Button>


    <ImageView
        android:id="@+id/imgTracksbtn"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_height="60dp"
        android:src="@drawable/tiretracks"></ImageView>


</RelativeLayout>